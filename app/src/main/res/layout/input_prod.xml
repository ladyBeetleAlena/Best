<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ingridients"
            type="zb.club.thebestoftebest.data.Ingredients" />
        <variable
            name="model"
            type="zb.club.thebestoftebest.cookbook.viewmodelcookbook.ViewModelAddRecipe" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutIngridient"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:hint="enter or choose product"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/on_check_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <AutoCompleteTextView
                android:id="@+id/ingredientAutuComplite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textAutoComplete"
                android:outlineAmbientShadowColor="@color/on_check_color"
                android:outlineSpotShadowColor="@color/on_check_color"
                android:textColor="@color/yellow_700" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout9"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="113dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            android:gravity="top"
            android:textColorHint="@color/yellow_200"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeColor="@color/on_check_color"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBinProduct"
            app:layout_constraintStart_toEndOf="@+id/textInputLayoutIngridient"
            app:layout_constraintTop_toTopOf="parent"
            app:suffixText="gr."
            app:suffixTextColor="@color/yellow_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prodweight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="weight"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/yellow_700"
                android:textColorHint="@color/yellow_200" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageViewBinProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout9"
            app:srcCompat="@drawable/ic_baseline_delete_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>