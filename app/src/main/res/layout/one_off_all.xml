<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/shape"
    android:layout_margin="8dp">


    <TextView
        android:id="@+id/TitleRecipeAllRec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/pictureFoodAllRec"
        android:layout_width="320dp"
        android:layout_height="240dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shapeimage"
        android:foregroundGravity="clip_horizontal|center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleRecipeAllRec"
        app:srcCompat="@drawable/ic_round_lunch_dining_24" />

    <ImageButton
        android:id="@+id/imageButtonDeleteRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/on_check_color"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonEdit"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/yellow_900" />

    <ImageButton
        android:id="@+id/imageButtonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/on_check_color"
        app:layout_constraintBottom_toBottomOf="@+id/TitleRecipeAllRec"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonDeleteRecipe"
        app:layout_constraintTop_toTopOf="@+id/TitleRecipeAllRec"
        app:srcCompat="@drawable/ic_baseline_edit_24"
        app:tint="@color/yellow_900" />
</androidx.constraintlayout.widget.ConstraintLayout>



